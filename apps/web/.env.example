# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-here

# Google OAuth (set these up in Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database URL - MySQL for development
DATABASE_URL="mysql://root:password@localhost:3306/jobhunt"

# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/jobhunt

# HelloWork Real Automation Configuration

# Set to 'true' to enable real job applications (CAUTION: This will apply to actual jobs!)
# Set to 'false' for demo/testing mode with mock data
ENABLE_REAL_AUTOMATION=false

# Browser settings for Puppeteer
PUPPETEER_HEADLESS=false
PUPPETEER_TIMEOUT=30000

# Safety settings
MAX_DAILY_APPLICATIONS=5
DELAY_BETWEEN_APPLICATIONS=5000

# Debug settings (screenshots, logs)
DEBUG_SCREENSHOTS=true
VERBOSE_LOGGING=true
